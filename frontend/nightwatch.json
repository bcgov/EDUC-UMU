{
    "src_folders": ["./tests/e2e/specs"],
    "output_folder": "./tests/e2e/reports",

    "test_settings": {
        "default": {
            "webdriver": {
                "start_process": true,
                "server_path": "./node_modules/chromedriver/lib/chromedriver/chromedriver",
                "port": 9515,
                "cli_args": []
            }
        },
        "firefox": {
            "webdriver": {
                "start_process": true,
                "server_path": "./node_modules/geckodriver/geckodriver",
                "port": 4444
            },
            "silent": true,
            "desiredCapabilities": {
                "browserName": "firefox",
                "alwaysMatch": {
                    "moz:firefoxOptions": {
                        "args": ["-headless"]
                    }
                }
            }
        },
        "chrome": {
            "silent": true,
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true,
                "acceptInsecureCerts": true,
                "webStorageEnabled": true,
                "chromeOptions": {
                    "args": [
                        "disable-gpu",
                        "no-sandbox",
                        "headless",
                        "ignore-certificate-errors",
                        "window-size=1920,1080"
                    ]
                }
            }
        }
    }
}