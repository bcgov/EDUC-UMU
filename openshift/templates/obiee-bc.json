{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata" : {
    "name": "obiee-umu",
    "creationTimestamp": null
  },
  "parameters": [
    {
        "name": "NAME",
        "displayName": "Name",
        "description": "A name used for all objects",
        "required": true,
        "value": "obiee-umu"
    },{
        "name": "VERSION",
        "displayName": "version",
        "description": "A version used for the image tags",
        "required": true,
        "value": "v1.0.0"
    },{
        "name": "SOURCE_REPO_URL",
        "required": true,
        "value": "https://github.com/bcgov/EDUC-UMU"
    },{
        "name": "SOURCE_REPO_REF",
        "required": false,
        "value": "master"
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp":null,
        "labels":{
          "shared": "true"
        }
      },
      "spec":{
        "lookupPolicy":{
          "local": "false"
        }
      }
    },
    {
    "kind": "BuildConfig",
    "apiVersion": "v1",
    "metadata": {
      "name": "${NAME}",
      "creationTimestamp": null,
      "labels":{
        "app": "${NAME}"
      }
    },
    "spec":{
      "triggers": [
        {
          "type": "ConfigChange"
        },
        {
          "type": "ImageChange",
          "imageChange":{}
        }
      ],
      "source":{
        "type": "Git",
        "git": {
          "ref": "${SOURCE_REPO_REF}",
          "uri": "${SOURCE_REPO_URL}"
        }
      },
      "strategy": {
        "type": "Source",
        "sourceStrategy": {
            "from": {
                "kind": "ImageStreamTag",
                "name": "jboss-eap71-openshift:1.3",
                "namespace": "openshift"
            }
        }
    },
    "output": {
        "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:${VERSION}"
        }
    },
    "resources": {
        "limits": {
            "cpu": "1",
            "memory": "1Gi"
        },
        "requests": {
            "cpu": "1",
            "memory": "1Gi"
        }
    },
    "postCommit": {},
    "runPolicy": "SerialLatestOnly",
    "successfulBuildsHistoryLimit": 2,
    "failedBuildsHistoryLimit": 2
    }
  }
  ]  
}